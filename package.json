{
    "name": "vesperr",
    "version": "2.0.0",
    "description": "Vesperr - Advanced WhatsApp Bot built with Baileys",
    "main": "index.js",
    "type": "module",
    "engines": {
        "node": ">=20.0.0"
    },
    "scripts": {
        "start": "node index.js",
        "dev": "node --watch index.js",
        "dev:debug": "node --watch --inspect index.js",
        "pm2": "pm2 start ecosystem.config.cjs",
        "pm2:stop": "pm2 stop vesperr",
        "pm2:restart": "pm2 restart vesperr",
        "pm2:logs": "pm2 logs vesperr",
        "pm2:monit": "pm2 monit",
        "docker:build": "docker build -t vesperr .",
        "docker:run": "docker run -d --name vesperr --env-file .env -v $(pwd)/session:/app/session -v $(pwd)/data:/app/data vesperr",
        "docker:dev": "docker build --target development -t vesperr:dev . && docker run -it --rm --name vesperr-dev --env-file .env -v $(pwd):/app vesperr:dev",
        "docker:stop": "docker stop vesperr && docker rm vesperr",
        "docker:logs": "docker logs -f vesperr",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "test:watch": "npm test -- --watch",
        "test:coverage": "npm test -- --coverage",
        "clean": "rm -rf node_modules package-lock.json",
        "clean:session": "rm -rf session/*",
        "clean:logs": "rm -rf logs/*",
        "clean:temp": "rm -rf temp/*",
        "clean:all": "npm run clean:session && npm run clean:logs && npm run clean:temp",
        "backup": "node scripts/backup.js",
        "restore": "node scripts/restore.js",
        "setup": "node scripts/setup.js",
        "update": "npm update && npm audit fix",
        "check": "npm outdated",
        "prepare": "husky install || true"
    },
    "keywords": [
        "whatsapp",
        "bot",
        "baileys",
        "chatbot",
        "automation",
        "vesperr",
        "whatsapp-api",
        "multi-device"
    ],
    "author": "MidknightMantra",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/MidknightMantra/Vesperr.git"
    },
    "bugs": {
        "url": "https://github.com/MidknightMantra/Vesperr/issues"
    },
    "homepage": "https://github.com/MidknightMantra/Vesperr#readme",
    "dependencies": {
        "@hapi/boom": "^10.0.1",
        "@whiskeysockets/baileys": "^7.0.0-rc.9",
        "axios": "^1.7.9",
        "chalk": "^5.3.0",
        "dotenv": "^16.4.7",
        "express": "^5.2.1",
        "file-type": "^19.6.0",
        "fluent-ffmpeg": "^2.1.3",
        "form-data": "^4.0.1",
        "jimp": "^1.6.0",
        "jsqr": "^1.4.0",
        "link-preview-js": "^3.0.5",
        "lru-cache": "^11.2.4",
        "mime-types": "^2.1.35",
        "moment-timezone": "^0.5.46",
        "node-cache": "^5.1.2",
        "node-cron": "^3.0.3",
        "node-fetch": "^3.3.2",
        "pino": "^9.5.0",
        "qrcode": "^1.5.4",
        "qrcode-terminal": "^0.12.0",
        "sharp": "^0.33.5",
        "uuid": "^11.0.3",
        "wa-sticker-formatter": "^4.4.4",
        "ws": "^8.18.0",
        "xss": "^1.0.15",
        "youtube-dl-exec": "^3.0.10",
        "yt-search": "^2.13.1",
        "ytdl-core": "^4.11.5"
    },
    "optionalDependencies": {
        "@google/generative-ai": "^0.21.0",
        "better-sqlite3": "^11.6.0",
        "canvas": "^2.11.2",
        "googleapis": "^144.0.0",
        "mongodb": "^6.12.0",
        "openai": "^4.76.1",
        "pg": "^8.13.1",
        "puppeteer": "^23.10.4",
        "redis": "^4.7.0"
    },
    "devDependencies": {
        "eslint": "^9.16.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.31.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.10",
        "nodemon": "^3.1.7",
        "prettier": "^3.4.2"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md}": [
            "prettier --write"
        ]
    },
    "prettier": {
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "es5",
        "printWidth": 100,
        "bracketSpacing": true,
        "arrowParens": "avoid"
    },
    "eslintConfig": {
        "env": {
            "node": true,
            "es2024": true
        },
        "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module"
        },
        "extends": [
            "eslint:recommended",
            "prettier"
        ],
        "rules": {
            "no-unused-vars": [
                "warn",
                {
                    "argsIgnorePattern": "^_"
                }
            ],
            "no-console": "off",
            "prefer-const": "warn",
            "no-var": "error"
        }
    },
    "jest": {
        "testEnvironment": "node",
        "transform": {},
        "moduleFileExtensions": [
            "js",
            "mjs"
        ],
        "testMatch": [
            "**/tests/**/*.test.js"
        ],
        "collectCoverageFrom": [
            "**/*.js",
            "!**/node_modules/**",
            "!**/tests/**"
        ]
    },
    "nodemonConfig": {
        "watch": [
            "."
        ],
        "ext": "js,json",
        "ignore": [
            "node_modules",
            "session",
            "data",
            "logs",
            "temp"
        ],
        "delay": 1000
    }
}